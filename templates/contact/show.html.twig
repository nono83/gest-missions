{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ contact.prenom }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ contact.dateNaissance ? contact.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nom_code</th>
                <td>{{ contact.nomCode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}">Retour Ã  la liste</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">Editer</a>

{% endblock %}
